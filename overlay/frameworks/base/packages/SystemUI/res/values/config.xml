<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Enabke Burn in protection -->
    <bool name="config_statusBarBurnInProtection">true</bool>

    <!-- Doze: check proximity sensor before pulsing? -->
    <bool name="doze_proximity_check_before_pulse">false</bool>

    <!-- Doze: does this device support STATE_DOZE?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- Doze: does this device support STATE_DOZE_SUSPEND?  -->
    <bool name="doze_suspend_display_state_supported">false</bool>

    <integer name="config_maxVisibleNotificationIcons">6</integer>
    <integer name="config_maxVisibleNotificationIconsOnLock">6</integer>
    <integer name="config_maxVisibleStatusIconContainer">7</integer>
    
     <!-- Tiles native to System UI. Order should match "quick_settings_tiles_default" -->
    <string name="quick_settings_tiles_stock" translatable="false">wifi,cell,battery,dnd,flashlight,rotation,bt,airplane,nfc,location,hotspot,inversion,saver,dark,work,cast,night,reverse,caffeine,ambient_display,usb_tether,sync,sound,screenshot,heads_up,theme,fpsinfo,smart_charge</string>
    
      <!-- The default tiles to display in QuickSettings -->
    <string name="quick_settings_tiles_default" translatable="false">wifi,custom(com.elpaablo.simtoggleplus/.Sim1TileService),custom(com.elpaablo.simtoggleplus/.Sim2TileService),bt,custom(com.elpaablo.simtoggleplus/.LTETileService),cell,custom(com.elpaablo.simtoggleplus/.ADBTileService),custom(com.elpaablo.simtoggleplus/.RCTileService),location,nfc,flashlight,theme,fpsinfo,battery,smart_charge,airplane,dark,sync,sound,custom(com.oneplus.screenrecord/.core.SystemUITileService)
</string>
    
    <!-- The minimum number of tiles to display in QuickSettings -->
    <integer name="quick_settings_min_num_tiles">6</integer>
    <integer name="quick_settings_num_columns">6</integer>
    
    <string name="doze_brightness_sensor_type" translatable="false">xiaomi.sensor.aod</string>

    
    <!-- Launcher package name for overlaying icons. -->
    <string name="launcher_overlayable_package" translatable="false">com.android.launcher3</string>

    <!-- ThemePicker package name for overlaying icons. -->
    <!--string name="themepicker_overlayable_package" translatable="false">com.android.wallpaper</string-->
</resources>
